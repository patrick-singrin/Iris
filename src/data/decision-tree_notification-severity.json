{
  "id": "notification-severity",
  "name": "Notification Severity Classification",
  "description": "Determines the severity level (CRITICAL / HIGH / MEDIUM / LOW) for events classified as Notification. Use after completing the Information Type classification.",
  "version": "1.0.0",
  "entryNode": "start",
  "nodes": {
    "start": {
      "type": "question",
      "text": "Is this happening now or planned for later?",
      "options": [
        { "label": "Now", "description": "Currently happening or just happened", "next": "now_platform" },
        { "label": "Planned for later", "description": "Scheduled change, upcoming deadline, future event", "next": "future_leadtime" }
      ]
    },

    "now_platform": {
      "type": "question",
      "text": "Is the entire platform down?",
      "description": "All services unavailable, no user can work at all",
      "options": [
        { "label": "Yes", "next": "r_now_critical_outage" },
        { "label": "No", "next": "now_security" }
      ]
    },
    "now_security": {
      "type": "question",
      "text": "Is this a security or compliance issue?",
      "description": "e.g. data breach, compromised credentials, compliance violation",
      "options": [
        { "label": "Yes", "next": "r_now_critical_security" },
        { "label": "No", "next": "now_impact" }
      ]
    },
    "now_impact": {
      "type": "question",
      "text": "Can users still do their work?",
      "options": [
        { "label": "No, they're blocked", "description": "Users cannot complete their tasks at all", "next": "now_blocked_scope" },
        { "label": "Partially — it's degraded", "description": "Users can work but with errors, slowness, or reduced quality", "next": "now_degraded_scope" },
        { "label": "Yes, no impact on current work", "description": "Existing functionality is unaffected", "next": "now_action" }
      ]
    },
    "now_blocked_scope": {
      "type": "question",
      "text": "How many users are affected?",
      "options": [
        { "label": "Many users", "description": "Significant portion of the user base", "next": "r_now_high_blocked_many" },
        { "label": "Few users", "description": "Limited to specific users or teams", "next": "r_now_medium_blocked_few" }
      ]
    },
    "now_degraded_scope": {
      "type": "question",
      "text": "How many users are affected?",
      "options": [
        { "label": "Many users", "description": "Significant portion of the user base", "next": "r_now_high_degraded_many" },
        { "label": "Few users", "description": "Limited to specific users or teams", "next": "r_now_medium_degraded_few" }
      ]
    },
    "now_action": {
      "type": "question",
      "text": "Do users need to do something?",
      "description": "e.g. update configuration, migrate data, accept new terms",
      "options": [
        { "label": "Yes", "next": "r_now_medium_action" },
        { "label": "No, just informational", "next": "r_now_low_info" }
      ]
    },

    "future_leadtime": {
